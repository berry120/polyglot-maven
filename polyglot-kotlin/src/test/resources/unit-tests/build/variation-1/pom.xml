<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <build>
    <sourceDirectory>src/main/kotlin</sourceDirectory>
    <scriptSourceDirectory>src/scripts/kotlin</scriptSourceDirectory>
    <testSourceDirectory>src/test/kotlin</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <extensions>
      <extension>
        <groupId>com.example.extensions</groupId>
        <artifactId>custom-application-lifecycle</artifactId>
      </extension>
      <extension>
        <groupId>com.example.extensions</groupId>
        <artifactId>another-custom-extension</artifactId>
        <version>1.0</version>
      </extension>
    </extensions>
    <defaultGoal>clean verify</defaultGoal>
    <resources>
      <resource>
        <targetPath>static</targetPath>
        <filtering>false</filtering>
        <directory>src/main/static</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.txt</include>
        </includes>
        <excludes>
          <exclude>**/.tmp</exclude>
          <exclude>**/node_modules</exclude>
        </excludes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <targetPath>static</targetPath>
        <filtering>false</filtering>
        <directory>src/test/static</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.txt</include>
        </includes>
        <excludes>
          <exclude>**/.tmp</exclude>
          <exclude>**/node_modules</exclude>
        </excludes>
      </testResource>
    </testResources>
    <directory>target/generated-sources/kotlin</directory>
    <finalName>${project.artifactId}</finalName>
    <filters>
      <filter>buildId</filter>
      <filter>revision</filter>
    </filters>
  </build>
</project>
